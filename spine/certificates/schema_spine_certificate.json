{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "URF Spine Certificate (v1.1.0)",
  "type": "object",
  "required": ["spine", "evidence", "hashes"],
  "properties": {
    "module": {
      "type": "object",
      "required": ["name", "version", "interfaces", "invariants"],
      "properties": {
        "name": { "type": "string" },
        "version": { "type": "string" },
        "interfaces": {
          "type": "object",
          "required": ["imports", "exports"],
          "properties": {
            "imports": { "type": "array", "items": { "type": "string" } },
            "exports": { "type": "array", "items": { "type": "string" } }
          },
          "additionalProperties": false
        },
        "invariants": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },
    "spine": {
      "type": "object",
      "required": ["version", "environment", "manifest"],
      "properties": {
        "version": { "type": "string" },
        "environment": {
          "type": "object",
          "required": ["oci_image_digest"],
          "properties": {
            "oci_image_digest": { "type": "string" }
          },
          "additionalProperties": true
        },
        "manifest": {
          "type": "object",
          "required": ["ordering", "merkle_root_sha256"],
          "properties": {
            "ordering": { "type": "string" },
            "merkle_root_sha256": { "type": "string" }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "evidence": {
      "type": "object",
      "required": ["artifacts"],
      "properties": {
        "artifacts": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["path", "sha256"],
            "properties": {
              "path": { "type": "string" },
              "sha256": { "type": "string" }
            },
            "additionalProperties": false
          }
        }
      },
      "additionalProperties": true
    },
    "hashes": {
      "type": "object",
      "required": ["certificate_sha256"],
      "properties": {
        "certificate_sha256": { "type": "string" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
